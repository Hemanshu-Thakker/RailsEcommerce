<section class="sandwich">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<%= form_with( local: true, url: validate_user_path) do |form| %>
					<div class="field">
						<%= form.label :username , :class => "label-style"%>
			    		<%= form.text_field :username %>
					</div>
					<div class="actions">
		    			<%= form.submit "Submit", :class => "label-style" %>
		    		</div>

		    		<div class="alert">
		    			<%= flash[:alert] %>
		    		</div>
		    				    		
		    		<div class="notice">
		    			<%= flash[:notice] %>
		    		</div>
				<% end %>
			</div>
		</div>
	</div>
</section>