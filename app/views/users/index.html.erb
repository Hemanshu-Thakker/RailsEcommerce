<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.balance %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Add Products', new_user_item_path(@user) %></td>
        <td><%= link_to 'Shop', user_items_path(@user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

