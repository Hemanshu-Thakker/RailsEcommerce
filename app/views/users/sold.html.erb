<section class="container sandwich">
    <% @orders.each do |ord| %>
      <div class="soldrow-styling">
        <div class="row">
          <div class="col-lg-3">
            
          </div>
          <div class="col-lg-3">
            <h3><%= ord.item.name %></h3>
            <h5>Rs. <%= ord.item.price %></h5>
          </div>
          <div class="col-lg-3">
            <h4>Bought quantity: <%= ord.quantity %></h4>
            <h6>Order purchased on <%= ord.created_at %></h6>
          </div>
          <div class="col-lg-3">
            <p>reordering functionalities and other review functionalities will be added later</p>
          </div>
        </div>
      </div>
    <% end %>
    <%= will_paginate @orders, renderer: BootstrapPagination::Rails %>
</section>