<section class="container sandwich">
    <% @items.each do |item| %>
      <% if item.active %>
      <div class="soldrow-styling">
        <div class="row">
          <div class="col-lg-3 img-st-dim">
            <%# if item.item_img.attached? %>
              <!-- <image src="<%#=(  url_for(item.item_img) )%>" class="img-styling-3"> -->
            <%# end %>
            <%= render 'img', item: item %>
          </div>
          <div class="col-lg-3">
            <h3><%= item.name %></h3>
            <h5>Rs. <%= item.price %></h5>
          </div>
          <div class="col-lg-3">
            <h4>Available quantity: <%= item.quantity %></h4>
            <p class="size-inc">Added on <%= item.created_at.in_time_zone("Chennai").strftime("%d/%m/%y %I:%M%p") %></p>
          </div>
          <div class="col-lg-3 img-st-dim">
            <%= link_to url: user_item_path(getCurrentUser,item), method: "delete" do %>
              <div class="button-style size-inc">
                <span class="size-inc2">Remove</span>
              </div>
            <% end %>
            <%= link_to edit_user_item_path(item.user,item) do %>
              <div class="button-style size-inc">
                <span class="size-inc2">Edit</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% else %>
        <div class="soldrow-styling opacity-change">
          <div class="row">
            <div class="col-lg-3 img-st-dim">
              <% if item.item_img.attached? %>
                <image src="<%=(  url_for(item.item_img) )%>" class="img-styling-3">
              <% end %>
            </div>
            <div class="col-lg-3">
              <h3><%= item.name %></h3>
              <h5>Rs. <%= item.price %></h5>
            </div>
            <div class="col-lg-3">
              <h4>Available quantity: <%= item.quantity %></h4>
              <p class="size-inc">Added on <%= item.created_at.in_time_zone("Chennai").strftime("%d/%m/%y %I:%M%p") %></p>
            </div>
            <div class="col-lg-3 img-st-dim">
              <%= link_to user_item_path(getCurrent_user,item), method:"delete" do %>
                <div class="button-style size-inc">
                  <span class="size-inc2">Remove</span>
                </div>
              <% end %>
              <%= link_to edit_user_item_path(item.user,item) do %>
                <div class="button-style size-inc">
                  <span class="size-inc2">Edit</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= will_paginate @items, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</section>